{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "vocola",
	"patterns": [
		{
			"include": "#keywords"
		},
		{
			"include": "#comments"
		},
		{
			"include": "#strings"
		}
	],
	"repository": {
		"keywords": {
			"patterns": [{
				"name": "keyword.control.vocola",
				"match": "\\b(if|while|for|return)\\b"
			}]
		},
		"comments": {
			"patterns": [
				{
				"name": "comment.line.number-sign.vocola",
				"begin": "#",
				"end": "\n"

				}		
			]
		},
		"strings": {
			"name": "string.quoted.double.vocola",
			"begin": "\"",
			"end": "\"",
			"patterns": [
				{
					"name": "constant.character.escape.vocola",
					"match": "\\\\."
				}
			]
		}
	},
	"scopeName": "source.vocola"
}