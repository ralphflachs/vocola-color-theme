{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "vocola",
	"patterns": [
		{
			"include": "#keywords"
		},
		{
			"include": "#comments"
		},
		{
			"include": "#constants"
		},
		{
			"include": "#strings"
		}
	],
	"repository": {
		"keywords": {
			"patterns": [
				{
					"name": "keyword.control.vocola",
					"match": "\\b(Ctrl|Alt|Space|Up|Down|Right|Left|Backspace|Del|Esc|Home|Shift|Enter|Tab|End|Break)\\b"
				}
				
			]
		},
		"constants": {
			"patterns": [
				{
					"name": "constant.character",
					"match": "(<|>|=|!|\\+)"
				}
			]
		},
		"comments": {
			"patterns": [
				{
					"name": "comment.line.number-sign.vocola",
					"begin": "#",
					"end": "\n"
				}
			]
		},
		"strings": {
			"name": "string.quoted.double.vocola",
			"begin": "\"",
			"end": "\"",
			"patterns": [
				{
					"name": "constant.character.escape.vocola",
					"match": "\\\\."
				}
			]
		}
	},
	"scopeName": "source.vocola"
}