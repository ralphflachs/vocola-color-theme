{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "vocola",
	"patterns": [
		{
			"include": "#expression"
		}
	],
	"repository": {
		"expression": {
			"patterns": [
				{
					"include": "#comments"
				},
				{
					"include": "#equation"
				},
				{
					"include": "#alternative-words"
				}
			]
		},
		"keyword": {
			"patterns": [
				{
					"match": "\\b(Ctrl|Alt|Space|Up|Down|Right|Left|Backspace|Del|Esc|Home|Shift|Enter|Tab|End|Break|PgDn|PgUp)\\b",
					"name": "keyword.control"
				},
				{
					"match": "[A-Z|a-z|0-9]",
					"name": "keyword.letter"
				},
				{
					"match": "\\+",
					"name": "keyword.operator"
				}
			]
		},
		"command": {
			"patterns": [
				{
					"name": "variable.parameter",
					"match": "[a-zA-Z]"
				}
			]
		},
		"equation": {
			"patterns": [
				{
					"match": "((.)+)(=)((.)+);",
					"captures": {
						"1": {
							"patterns": [
								{
									"include": "#left-side"
								}
							]
						},
						"4": {
							"patterns": [
								{
									"include": "#right-side"
								}
							]
						}
					}
				}
			]
		},
		"right-side": {
			"patterns":[
				{
					"include": "#keystroke-sequence"
				},
				{
					"include": "#variable-reference"
				}

			]
		},
		"left-side": {
			"patterns": [
				{
					"include": "#alternative-words"
				},
				{
					"include": "#optional-words"
				},
				{
					"include": "#command"
				},
				{
					"include": "#defining-variables"
				}
			]
		},
		"keystroke-sequence": {
			"begin": "\\{",
			"end": "\\}",
			"beginCaptures": {
				"0": {
					"name": "string.quoted.other"
				}
			},
			"endCaptures": {
				"0": {
					"name": "string.quoted.other"
				}
			},
			"name": "keystroke.group",
			"patterns": [
				{
					"include": "#keyword"
				},
				{
					"include": "#variable-reference"
				}
			]
		},
		"alternative-keyword": {
			"patterns": [
				{
					"match": "\\|",
					"name": "support.type"
				}
			]
		},
		"alternative-words": {
			"begin": "\\(",
			"end": "\\)",
			"beginCaptures": {
				"0": {
					"name": "string.quoted.other"
				}
			},
			"endCaptures": {
				"0": {
					"name": "string.quoted.other"
				}
			},
			"name": "alternative.group",
			"patterns": [
				{
					"include": "#alternative-keyword"
				},
				{
					"include": "#keystroke-sequence"
				},
				{
					"include": "#alternative-command"
				}
			]
		},
		"alternative-command": {
			"patterns": [
				{
					"name": "variable.language",
					"match": "[a-zA-Z]"
				}
			]
		},
		"optional-command": {
			"patterns": [
				{
					"name": "support.type",
					"match": "[a-zA-z]"
				}
			]
		},
		"optional-words": {
			"begin": "\\[",
			"end": "\\]",
			"beginCaptures": {
				"0": {
					"name": "string.quoted.other"
				}
			},
			"endCaptures": {
				"0": {
					"name": "string.quoted.other"
				}
			},
			"name": "optional.group",
			"patterns": [
				{
					"include": "#alternative-keyword"
				},
				{
					"include": "#optional-command"
				}
			]
		},
		"defining-variables": {
			"begin": "\\<",
			"end": "\\> ",
			"beginCaptures": {
				"0": {
					"name": "string.quoted.other"
				}
			},
			"endCaptures": {
				"0": {
					"name": "string.quoted.other"
				}
			},
			"name": "variable.group",
			"patterns": [
				{
					"include": "#alternative-keyword"
				}
			]
		},
		"variable-reference": {
			"patterns": [
				{
					"name": "variable.parameter",
					"match": "[$][0-9]"
				}
			]
		},
		"comments": {
			"patterns": [
				{
					"name": "comment.line.number-sign",
					"begin": "#",
					"end": "\n"
				}
			]
		}
	},
	"scopeName": "source.vocola"
}