{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "vocola",
	"patterns": [
		{
			"include": "#expression"
		}
	],
	"repository": {
		"expression": {
			"patterns": [
				{
					"include": "#keystroke-command"
				},
				{
					"include": "#alternative-words"
				}
			]
		},
		"keyword": {
			"patterns": [
				{
					"match": "\\b(Ctrl|Alt|Space|Up|Down|Right|Left|Backspace|Del|Esc|Home|Shift|Enter|Tab|End|Break)\\b",
					"name": "keyword.control"
				},
				{
					"match": "[A-Z|a-z|0-9]",
					"name": "keyword.letter"
				},
				{
					"match": "\\+",
					"name": "keyword.operator"
				}
			]
		},
		"keystroke-command": {
			"begin": "\\{",
			"end": "\\}",
			"beginCaptures": {
				"0": {
					"name": "string.quoted.other"
				}
			},
			"endCaptures": {
				"0": {
					"name": "string.quoted.other"
				}
			},
			"name": "keystroke.group",
			"patterns": [
				{
					"include": "#keyword"
				}
			]
		},
		"alternative-keyword": {
			"patterns": [
				{
					"match": "\\|",
					"name": "keyword.letter"
				}
			]
		},
		"alternative-words": {
			"begin": "\\(",
			"end": "\\)",
			"beginCaptures": {
				"0": {
					"name": "string.quoted.other"
				}
			},
			"endCaptures": {
				"0": {
					"name": "string.quoted.other"
				}
			},
			"name": "alternative.group",
			"patterns": [
				{
					"include": "#alternative-keyword"
				},
				{
					"include": "#keystroke-command"
				}
			]
		}
	},
	"scopeName": "source.vocola"
}