{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "vocola",
	"patterns": [
		{
			"include": "#expression"
		}
	],
	"repository": {
		"expression": {
			"patterns": [				
				{
					"include": "#keystroke-command"
				}
			]
		},
		"keyword": {
			"patterns": [
				{
					"match": "\\b(Ctrl|Alt|Space|Up|Down|Right|Left|Backspace|Del|Esc|Home|Shift|Enter|Tab|End|Break|PgDn|PgUp)\\b",
					"name": "keyword.control"
				},
				{
					"match": "[A-Z|a-z|0-9]",
					"name": "keyword.letter"
				},
				{
					"match": "\\+",
					"name": "keyword.operator"
				}
			]
		},
		"keystroke-command": {
			"patterns": [
				{
					"match": "((.)+)=",
					"captures": {
						"1": {
							"name": "variable.parameter"
						}
					}
				}
			]
		},
		"keystroke-sequence": {
			"begin": "\\{",
			"end": "\\}",
			"beginCaptures": {
				"0": {
					"name": "string.quoted.other"
				}
			},
			"endCaptures": {
				"0": {
					"name": "string.quoted.other"
				}
			},
			"name": "keystroke.group",
			"patterns": [
				{
					"include": "#keyword"
				},
				{
					"include": "#variable-reference"
				}
			]
		},
		"alternative-keyword": {
			"patterns": [
				{
					"match": "\\|",
					"name": "keyword.letter"
				}
			]
		},
		"alternative-words": {
			"begin": "\\(",
			"end": "\\)",
			"beginCaptures": {
				"0": {
					"name": "string.quoted.other"
				}
			},
			"endCaptures": {
				"0": {
					"name": "string.quoted.other"
				}
			},
			"name": "alternative.group",
			"patterns": [
				{
					"include": "#alternative-keyword"
				},
				{
					"include": "#keystroke-sequence"
				}
			]
		},
		"optional-words": {
			"begin": "\\[",
			"end": "\\]",
			"beginCaptures": {
				"0": {
					"name": "string.quoted.other"
				}
			},
			"endCaptures": {
				"0": {
					"name": "string.quoted.other"
				}
			},
			"name": "optional.group",
			"patterns": [
				{
					"include": "#alternative-keyword"
				},
				{
					"include": "#keystroke-sequence"
				}
			]
		},
		"defining-variables": {
			"begin": "\\<",
			"end": "\\> ",
			"beginCaptures": {
				"0": {
					"name": "string.quoted.other"
				}
			},
			"endCaptures": {
				"0": {
					"name": "string.quoted.other"
				}
			},
			"name": "variable.group",
			"patterns": [
				{
					"include": "#alternative-keyword"
				}
			]
		},
		"variable-reference": {
			"patterns": [
				{
					"name": "variable.parameter",
					"match": "[$][0-9]"
				}
			]
		},
		"comments": {
			"patterns": [
				{
					"name": "comment.line.number-sign",
					"begin": "#",
					"end": "\n"
				}
			]
		}
	},
	"scopeName": "source.vocola"
}