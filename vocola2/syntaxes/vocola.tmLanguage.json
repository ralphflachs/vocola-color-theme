{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "vocola",
	"patterns": [
		{
			"include": "#expression"
		}
	],
	"repository": {
		"expression": {
			"patterns": [
				{
					"include": "#keystroke-command"
				},
				{
					"include": "#alternative-words"
				},
				{
					"include": "#optional-words"
				},
				{
					"include": "#comments"
				},
				{
					"include": "#defining-variables"
				},
				{
					"include": "#variable-reference"
				},
				{
					"include": "#builtin-functions"
				}
			]
		},
		"keyword": {
			"patterns": [
				{
					"match": "\\b(Ctrl|Alt|Space|Up|Down|Right|Left|Backspace|Del|Esc|Home|Shift|Enter|Tab|End|Break|PgDn|PgUp)\\b",
					"name": "keyword.control"
				},
				{
					"match": "[A-Z|a-z|0-9]",
					"name": "keyword.letter"
				},
				{
					"match": "\\+",
					"name": "keyword.operator"
				}
			]
		},
		"keystroke-command": {
			"begin": "\\{",
			"end": "\\}",
			"beginCaptures": {
				"0": {
					"name": "string.quoted.other"
				}
			},
			"endCaptures": {
				"0": {
					"name": "string.quoted.other"
				}
			},
			"name": "keystroke.group",
			"patterns": [
				{
					"include": "#keyword"
				},
				{
					"include": "#variable-reference"
				}
			]
		},
		"alternative-keyword": {
			"patterns": [
				{
					"match": "\\|",
					"name": "keyword.letter"
				}
			]
		},
		"alternative-words": {
			"begin": "\\(",
			"end": "\\)",
			"beginCaptures": {
				"0": {
					"name": "string.quoted.other"
				}
			},
			"endCaptures": {
				"0": {
					"name": "string.quoted.other"
				}
			},
			"name": "alternative.group",
			"patterns": [
				{
					"include": "#alternative-keyword"
				},
				{
					"include": "#keystroke-command"
				}
			]
		},
		"optional-words": {
			"begin": "\\[",
			"end": "\\]",
			"beginCaptures": {
				"0": {
					"name": "string.quoted.other"
				}
			},
			"endCaptures": {
				"0": {
					"name": "string.quoted.other"
				}
			},
			"name": "optional.group",
			"patterns": [
				{
					"include": "#alternative-keyword"
				},
				{
					"include": "#keystroke-command"
				}
			]
		},
		"defining-variables": {
			"begin": "\\<",
			"end": "\\> ",
			"beginCaptures": {
				"0": {
					"name": "string.quoted.other"
				}
			},
			"endCaptures": {
				"0": {
					"name": "string.quoted.other"
				}
			},
			"name": "variable.group",
			"patterns": [
				{
					"include": "#alternative-keyword"
				}
			]
		},
		"variable-reference": {
			"patterns": [
				{
					"name": "variable.parameter",
					"match": "[$][0-9]"
				}
			]
		},
		"builtin-functions": {
			"patterns": [
				{
					"match": "\\b(ActiveControlPick|ActiveMenuPick|AppBringUp|AppSwapWith|Beep|ButtonClick|ClearDesktop|ControlPick|DdeExecute|DllCall|DdePoke|DragToPoint|Eval|EvalTemplate|GoToSleep|If|HeardWord|HTMLHelp|MenuCancel|MenuPick|PlaySound|MouseGrid|MsgBoxConfirm|RememberPoint|Repeat|RunScriptFile|SendDragonKeys|SendKeys|SendSystemKeys|SetMicrophone|ShiftKey|SetMousePosition|SetNaturalText|ShellExecute|TTSPlayString|Unimacro|Wait|WaitForWindow|WakeUp|WinHelp|When)\\b",
					"name": "entity.name.function"
				}
			]
		},
		"comments": {
			"patterns": [
				{
					"name": "comment.line.number-sign",
					"begin": "#",
					"end": "\n"
				}
			]
		}
	},
	"scopeName": "source.vocola"
}