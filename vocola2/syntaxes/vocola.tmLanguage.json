{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "vocola",
	"patterns": [
		{
			"include": "#expression"
		}
	],
	"repository": {
		"expression": {
			"patterns": [
				{
					"include": "#paren-expression"
				}
			]
		},
		"keyword": {
			"patterns": [
				{
					"match": "\\b(Ctrl|Alt|Space|Up|Down|Right|Left|Backspace|Del|Esc|Home|Shift|Enter|Tab|End|Break)\\b",
					"name": "keyword.control"
				},
				{
					"match": "[A-Z|a-z|0-9]",
					"name": "keyword.letter"
				},
				{
					"match": "\\+",
					"name": "keyword.operator"
				}
			]
		},
		"paren-expression": {
			"begin": "\\{",
			"end": "\\}",
			"beginCaptures": {
				"0": {
					"name": "string.quoted.other"
				}
			},
			"endCaptures": {
				"0": {
					"name": "string.quoted.other"
				}
			},
			"name": "expression.group",
			"patterns": [
				{
					"include": "#keyword"
				}
			]
		}
	},
	"scopeName": "source.vocola"
}